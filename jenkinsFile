pipeline {
    
    agent any
    environment {
        PATH = "/usr/share/maven/bin:$PATH"
    }
    stages {
        stage('CHECKOUT GIT') {
            
            steps{
                echo 'Pulling...';
                git branch: 'main',
                url: 'https://github.com/ihebayari1/devops2.git',
                credentialsId: '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';
            }
        }
        stage('BUILD') {
            steps{
                withMaven(maven: 'Maven') {
                      sh 'mvn clean install'
                    }
               }
        }

    }
    
    
}
